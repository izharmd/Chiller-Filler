<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_address"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_gray2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/light_gray2"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="Delivery to: Home(Default)"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_5sdp"
           android:textStyle="bold"
            android:drawableLeft="@drawable/location_on_24"
            android:layout_marginLeft="@dimen/_5sdp">
        </TextView>

        <TextView
            android:id="@+id/txtChangeAddress"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight=".2"
            android:text="Change"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/round_address"></TextView>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading Berkshire RG6 6AH United Kingdom"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp">
    </TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#25E3E4E3"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:text="Default Delivery Option"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_5sdp">
        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Shipment"
                android:drawableLeft="@drawable/delivery_24"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
               android:layout_gravity="center"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charges: FREE"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
               android:layout_gravity="center"></TextView>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#25E3E4E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#25E3E4E3"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text="Shipment 1: Express Delivery"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp">
        </TextView>

        <TextView
            android:id="@+id/txtViewAllItems"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight=".3"
            android:background="@drawable/round_address"
            android:gravity="center"
            android:text="View Items"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"></TextView>




    </LinearLayout>


        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/round_delivery_time"
            android:drawableLeft="@drawable/access_time_24"
            android:drawableRight="@drawable/arrow_down_24"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Today 4:30 PM - 6:30 PM"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/txtProceedToPay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/light_yellow"
            android:textColor="@color/white"
            android:text="PROCEED TO PAY"
            android:layout_margin="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"></TextView>

    </LinearLayout>

</LinearLayout>